= render 'years/header'

.main-conts
  .left-conts
    .left-conts__list
      .left-conts__list__title
        .left-conts__list__title__name
          収入
      .left-conts__list__items
        %table{border:"1",class:"table-items"}
          %tr
            %th{class:"item"} 項目
            %th{class:"cf-text"} キャッシュフロー
          - @incomes.each do |income|
            %tr
              %td 
                ="#{income.item}"
              %td
                ="#{income.cf}"
                万円
      .left-conts__list__r-side
        .when
          = "#{@year.year}年#{@month.month}月"
        .edit
          .edit__btn
            = link_to year_month_path(@year, @month), class: "m-icon" do
              %i{class:"fas fa-cog"}
            = link_to year_month_path(@year, @month), method: :delete, class: "m-icon" do
              %i{class:"fas fa-trash-alt"}

        .total
          ="総収入:#{total_cf(@incomes)}万円"
    .left-conts__list
      .left-conts__list__title
        .left-conts__list__title__name
          支出
      .left-conts__list__items
        %table{border:"1",class:"table-items"}
          %tr
            %th{class:"item"} 項目
            %th{class:"cf-text"} キャッシュフロー
          - @expenses.each do |expense|
            %tr
              %td 
                ="#{expense.item}"
              %td
                ="#{expense.cf}"
                万円
      .left-conts__list__r-side
        .total
          %ul
            %li
              ="総支出:#{total_cf(@expenses)}万円"
            %li
              ="月のCF:#{profit_cf(@month)}万円"
          
  = render 'years/right_conts'

= render 'years/sub_conts'